{
  "name": "ixc-na-universidade",
  "version": "1.0.0",
  "description": "Exemplos de Injeção de Dependências em JavaScript/TypeScript",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "test": "jest",
    "test:bad-code": "jest src/0_bad-code/__tests__",
    "test:better-code": "jest src/1_better-code/__tests__",
    "test:inversify": "jest src/2_di-code/__tests__",
    "test:ant-di": "jest src/3_ant-di-code/__tests__",
    "test:all": "jest --coverage"
  },
  "dependencies": {
    "@davidcromianski-dev/ant-di": "^3.0.0",
    "inversify": "^6.0.2",
    "reflect-metadata": "^0.2.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.3",
    "typescript": "^5.5.3"
  },
  "private": true
}
